{
  "name": "flaredb",
  "version": "1.0.1",
  "type": "module",
  "description": "FlareDb is an ongoing project  that focuses on simplicity and efficiency. It is intended to be a self hosted database where individuals will be able to host and use with ease. The purpose of  `FlareDb` is not to compete with the likes of `sqlite`, `mongodb` and so on but rather to aid our organisation [CodeTheEarth](https://github.com/CodeTheEarth)",
  "main": "index.js",
  "directories": {
    "doc": "docs",
    "test": "test"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "tsup src/index.ts --format cjs,esm --dts --out-dir dist --clean"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CodeTheEarth/flareDb.git"
  },
  "types": "./src/index.d.ts",
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/CodeTheEarth/flareDb/issues"
  },
  "homepage": "https://github.com/CodeTheEarth/flareDb#readme",
  "private": false,
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^24.5.2",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2"
  },
  "peerDependencies": {
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "resolve-from": "^5.0.0"
  }
}
